<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_ada_project_article_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:contentDescription="@null"
            android:src="@drawable/ic_launcher_background" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="5">

            <TextView
                android:id="@+id/tv_ada_project_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                tools:text="Android Framework开发应该如何入门？写给程序员Android Framework 开发，这一篇就够了" />

            <TextView
                android:id="@+id/tv_ada_project_article_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ada_project_article_title"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                tools:text="Android Framework开发应该如何入门？写给程序员Android Framework 开发，这一篇就够了
发的是分开了测试最长文本撒放到房间里撒副教授阿拉斯加法律纠纷拉德斯基发上来大家发了十几分阿福链接啦速度快" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_ada_project_article_desc">

                <TextView
                    android:id="@+id/tv_ada_project_article_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/img_ada_project_article_collect"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp"
                    tools:text="作者" />

                <TextView
                    android:id="@+id/tv_ada_project_article_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/img_ada_project_article_collect"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp"
                    tools:text="2022-08-12 00:00:00" />

                <ImageView
                    android:id="@+id/img_ada_project_article_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@null"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:src="@drawable/icon_home_article_collect_default" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>