<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ada_home_article_tag_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/color_red_f44366"
                android:paddingVertical="1.5dp"
                android:paddingHorizontal="3dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_solid_white_stroke_1dp_red_f44366_2dp"
                tools:text="置顶"/>
            <TextView
                android:id="@+id/tv_ada_home_article_tag_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/color_purple_b184ea"
                android:paddingVertical="1.5dp"
                android:paddingHorizontal="3dp"
                android:background="@drawable/shape_solid_white_stroke_1dp_purple_b184ea_2dp"
                tools:text="本站发布"/>

            <TextView
                android:id="@+id/tv_ada_home_article_people"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/color_666666"
                tools:text="发布者"/>
            <TextView
                android:id="@+id/tv_ada_home_article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/color_666666"
                tools:text="2022-11-29 22:10"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ada_home_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            tools:text="Android Framework开发应该如何入门？写给程序员Android Framework 开发，这一篇就够了"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ada_home_article_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/color_666666"
                tools:text="广场Tab/自助"/>

            <ImageView
                android:id="@+id/img_ada_home_article_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/icon_home_article_collect_default"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>