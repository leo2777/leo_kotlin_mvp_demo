<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme"
    tools:context=".ui.test.KotlinTestActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/button_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示 success"
                tools:layout_editor_absoluteX="155dp"
                tools:layout_editor_absoluteY="31dp" />

            <Button
                android:id="@+id/button_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示 info"
                tools:layout_editor_absoluteX="153dp"
                tools:layout_editor_absoluteY="93dp" />

            <Button
                android:id="@+id/button_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示 warning"
                tools:layout_editor_absoluteX="151dp"
                tools:layout_editor_absoluteY="162dp" />

            <Button
                android:id="@+id/button_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示 error"
                tools:layout_editor_absoluteX="149dp"
                tools:layout_editor_absoluteY="236dp" />
            <Button
                android:id="@+id/button_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示 normal"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="312dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>